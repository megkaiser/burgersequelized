<h1>Eat Da Burger!</h1>

<h2>Burgers to eat!</h2>
<ul>
    {{#each burgers}}
        {{#unless this.devoured}}
            <li>
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button type="devoured">Devoured!</button>
                </form>

                {{ burgers/delete-burger}}
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers!</h2>
<ul>
    {{#each burgers}}
        {{#if this.devoured}}
            <li>
                {{this.burger_name}}
                <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button type="submit">Remake this burger!</button>
                </form>
            
            {{ burgers/delete-burger}}
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
    </div>

    <div class="form-group">
        <label for="devoured">Has this burger been devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked>Devoured!<br>
        <input type="radio" name="devoured" value="0">Burgers to eat
    </div>

    <button type="submit">Add Burger!</button>
</form>